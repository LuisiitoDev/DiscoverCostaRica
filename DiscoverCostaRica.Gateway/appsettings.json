{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ReverseProxy": {
    "Routes": {
      "geoservice": {
        "ClusterId": "geoservice", // <-- ClusterId de la ruta
        "Match": {
          "Path": "/api/provinces/{**remainder}"
        },
        "Transforms": [
          {
            "PathPrefix": "/api/v1/geo"
          }
        ]
      }
    },

    // ðŸš¨ SecciÃ³n CLUSTERS faltante ðŸš¨
    "Clusters": {
      "geoservice": { // <-- Nombre del Cluster DEBE coincidir con el ClusterId
        "Destinations": {
          "apiservice": {
            "Address": "http://apiservice"
          }
        }
      }
    }
  }
}